{
  "name": "apollo-server",
  "version": "0.0.1",
  "description": "Apollo GraphQL Boilerplate",
  "main": "src/app.js",
  "author": "Adroaldo de Andrade <adroaldof@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "esw .",
    "lint:watch": "yarn lint --watch",
    "precommit": "lint-staged && npm test",
    "prettier": "prettier --write \"**/*.js\"",
    "start": "nodemon src/app.js --exec babel-node",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "coverage": "jest --coverage",
    "coverage:watch": "jest --coverage --watch"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.test\\.jsx?$",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!**/__tests__/**/*.js",
      "!src/config/*",
      "!src/knex/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "apollo-engine": "^1.1.2",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "eslint-watch": "^4.0.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.5",
    "knex": "^0.15.2",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7"
  }
}
